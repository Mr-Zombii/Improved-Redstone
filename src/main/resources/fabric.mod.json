	"authors": [
		"Mr_Zombii",
		"M4ximumPizza"
	],
	"contact": {
		"sources": "https://github.com/Mr-Zombii/Improved-Redstone"
	},
	"license": "CC0-1.0",
	"icon": "assets/improved-redstone/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"me.zombii.improved_redstone.ImprovedRedstone"
		],
		"client": [
			"me.zombii.improved_redstone.ImprovedRedstoneClient"
		]
	},
	"mixins": [
		"improved-redstone.mixins.json",
		{
			"config": "improved-redstone.client.mixins.json",
			"environment": "client"
